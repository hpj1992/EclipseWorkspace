var ejs= require('ejs');
var mysql = require('mysql');
var redis = require('redis');
var client = redis.createClient(6379, "127.0.0.1");


function getConnection(){
	var connection = mysql.createConnection({
	    host     : 'localhost',
	    user     : 'root',
	    password : 'root',
	    database : 'ebay'
	});
	return connection;
}


