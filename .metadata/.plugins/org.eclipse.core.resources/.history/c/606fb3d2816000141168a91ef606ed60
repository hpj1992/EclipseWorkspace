import java.util.ArrayList;


public class Cheese extends Decorator {
	
	
	
	
	
	 public Cheese(Component2 c)
	    {
	       super(c);
	       
	    }

	    
	     public double getPrice()
	    {
	    	 double cost=0;
	 		if(Composite.cheeseCount>1)
	 		{
	 			cost=super.getCost()+(1.00*(intCheeseCount-1));
	 		}
	 		return cost;
	 		
	        double cost =0;
	        if(burgers.size()!=0)
	            {
	                cost = burgers.size()-1;
	            }
	         cost+=super.getCost();
	       
	    }

}
