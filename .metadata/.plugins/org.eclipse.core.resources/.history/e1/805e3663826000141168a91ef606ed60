
public class PremTopping extends Decorator {
	
	 public PremTopping(Component2 c)
	    {
	       super(c);
	       
	    }

	    
	     public double getPrice()
	    {
	    	 double cost=0;
	 		if(Composite.toppingsCount>1)
	 		{
	 			//1.00 for each extra cheese
	 			cost=super.getCost()+(1.00*(Composite.cheeseCount-1));
	 		}
	 		return cost;
	 		
	      
	       
	    }

}
